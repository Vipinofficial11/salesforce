{
  "metadata": {
    "spec-version": "1.5"
  },
  "configuration-groups": [
    {
      "label": "Reference",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        }
      ]
    },
    {
      "label": "Connection",
      "properties": [
        {
          "widget-type": "toggle",
          "label": "Use connection",
          "name": "useConnection",
          "widget-attributes": {
            "on": {
              "value": "true",
              "label": "YES"
            },
            "off": {
              "value": "false",
              "label": "NO"
            },
            "default": "false"
          }
        },
        {
          "widget-type": "connection-select",
          "label": "Connection",
          "name": "connection",
          "widget-attributes": {
            "connectionType": "Salesforce"
          }
        },
        {
          "widget-type" : "hidden",
          "label": "OAuth Information",
          "name": "oAuthInfo"
        },
        {
          "widget-type": "textbox",
          "label": "Username",
          "name": "username"
        },
        {
          "widget-type": "password",
          "label": "Password",
          "name": "password"
        },
        {
          "widget-type": "password",
          "label": "Security Token",
          "name": "securityToken"
        },
        {
          "widget-type": "textbox",
          "label": "Consumer Key",
          "name": "consumerKey"
        },
        {
          "widget-type": "password",
          "label": "Consumer Secret",
          "name": "consumerSecret"
        },
        {
          "widget-type": "textbox",
          "label": "Login Url",
          "name": "loginUrl",
          "widget-attributes" : {
            "default": "https://login.salesforce.com/services/oauth2/token"
          }
        },
        {
          "widget-type": "number",
          "label": "Connect Timeout",
          "name": "connectTimeout",
          "widget-attributes": {
            "min": "0",
            "default": "30000"
          }
        }
      ]
    },
    {
      "label": "HTTP Proxy",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Proxy URL",
          "name": "proxyUrl",
          "widget-attributes" : {
            "placeholder": "Proxy Url"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Username",
          "name": "proxyUsername",
          "widget-attributes" : {
            "placeholder": "Proxy Username"
          }
        },
        {
          "widget-type": "password",
          "label": "Password",
          "name": "proxyPassword",
          "widget-attributes" : {
            "placeholder": "Proxy Password"
          }
        }
      ]
    },
    {
      "label": "Push Topic",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Topic Name",
          "name": "pushTopicName"
        },
        {
          "widget-type": "textbox",
          "label": "Query",
          "name": "pushTopicQuery",

          "plugin-function": {
            "method": "POST",
            "widget": "outputSchema",
            "output-property": "schema",
            "plugin-method": "outputSchema"
          }
        },
        {
          "widget-type": "select",
          "label": "Notify On Create",
          "name": "pushTopicNotifyCreate",
          "widget-attributes": {
            "values": [
              "Enabled",
              "Disabled"
            ],
            "default": "Enabled"
          }
        },
        {
          "widget-type": "select",
          "label": "Notify On Update",
          "name": "pushTopicNotifyUpdate",
          "widget-attributes": {
            "values": [
              "Enabled",
              "Disabled"
            ],
            "default": "Enabled"
          }
        },
        {
          "widget-type": "select",
          "label": "Notify On Delete",
          "name": "pushTopicNotifyDelete",
          "widget-attributes": {
            "values": [
              "Enabled",
              "Disabled"
            ],
            "default": "Enabled"
          }
        },
        {
          "widget-type": "select",
          "label": "Notify For Fields",
          "name": "pushTopicNotifyForFields",
          "widget-attributes": {
            "values": [
              "All",
              "Referenced",
              "Select",
              "Where"
            ],
            "default": "Referenced"
          }
        }
      ]
    },
    {
      "label": "SObject Query",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "SObject Name",
          "name": "sObjectName",
          "widget-attributes": {
            "placeholder": "Salesforce object name"
          }
        }
      ]
    }
  ],
  "filters": [
    {
      "name": "showConnectionProperties ",
      "condition": {
        "expression": "useConnection == false"
      },
      "show": [
        {
          "type": "property",
          "name": "consumerKey"
        },
        {
          "type": "property",
          "name": "consumerSecret"
        },
        {
          "type": "property",
          "name": "securityToken"
        },
        {
          "type": "property",
          "name": "username"
        },
        {
          "type": "property",
          "name": "password"
        },
        {
          "type": "property",
          "name": "loginUrl"
        },
        {
          "type": "property",
          "name": "connectTimeout"
        },
        {
          "type": "property",
          "name": "proxyUrl"
        },
        {
          "type": "property",
          "name": "proxyUsername"
        },
        {
          "type": "property",
          "name": "proxyPassword"
        }
      ]
    },
    {
      "name": "showConnectionId",
      "condition": {
        "expression": "useConnection == true"
      },
      "show": [
        {
          "type": "property",
          "name": "connection"
        }
      ]
    },
    {
      "name": "Proxy authentication",
      "condition": {
        "property": "proxyUrl",
        "operator": "exists"
      },
      "show": [
        {
          "name": "proxyUsername",
          "type": "property"
        },
        {
          "name": "proxyPassword",
          "type": "property"
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "schema",
      "label": "schema",
      "widget-type": "schema",
      "widget-attributes": {
        "schema-types": [
          "boolean",
          "int",
          "long",
          "float",
          "double",
          "bytes",
          "string"
        ],
        "schema-default-type": "string",
        "property-watch": "format"
      }
    }
  ]
}